{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "West Europe",
      "metadata": {
        "description": "Ubicación para los recursos de Azure."
      }
    },
    "appName": {
      "type": "string",
      "defaultValue": "MyMvcApp",
      "metadata": {
        "description": "Nombre de la aplicación web."
      }
    },
    "appServicePlanName": {
      "type": "string",
      "defaultValue": "MyMvcAppServicePlan",
      "metadata": {
        "description": "Nombre del App Service Plan."
      }
    },
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "GitHub-Copilot-Challenges",
      "metadata": {
        "description": "Nombre del grupo de recursos."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[parameters('appName')]",
      "location": "[parameters('location')]",
      "kind": "app",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "appSettings": [
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "14.17"
            },
            {
              "name": "ASPNETCORE_ENVIRONMENT",
              "value": "Production"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "Tier": "Standard",
        "Name": "S1",
        "Capacity": 1
      },
      "properties": {
        "name": "[parameters('appServicePlanName')]",
        "workerSize": "0",
        "numberOfWorkers": "1"
      }
    }
  ],
  "outputs": {
    "appUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('appName'), '.azurewebsites.net')]"
    }
  }
}