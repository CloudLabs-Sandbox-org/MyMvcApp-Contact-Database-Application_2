@model List<MyMvcApp.Models.User>

@{
    ViewData["Title"] = "Search Users";
}

<h1>Search Users</h1>

<form method="get" asp-action="Search">
    <input type="text" name="query" value="@ViewBag.Query" placeholder="Enter name to search" />
    <button type="submit">Search</button>
</form>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id">Details</a> |
                        <a asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No users found.</p>
}